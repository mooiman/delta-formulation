{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++20",
                "${workspaceFolder}\\packages\\src\\*.cpp",
                "/I ${workspaceFolder}\\packages\\include\\*.h",
                "/I ${workspaceFolder}\\..\\..\\lib\\eigen",
                "/I ${workspaceFolder}\\..\\..\\lib\\netcdf",
                "/I ${workspaceFolder}\\..\\..\\lib\\toml++",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}